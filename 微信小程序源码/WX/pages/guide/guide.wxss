/* pages/map/map.wxss */
page{ background-color: #000; width: 100%; height: 100%;}
#myMap{ width:100%; height:90%; }

.the-search{ width: 100%; height: auto; overflow: hidden; position: relative;}
.ser-con{ width: 100%; height: 80rpx; background-color: #fff; border-top: 1px solid #fafafa; 
border-bottom: 1px solid #fafafa; box-shadow: 0 0 12rpx #999; }
.ser-con .btn{ width:20%; height: 80rpx; line-height: 80rpx; font-size: 28rpx; border-radius: 0; padding: 0; 
background-color: #fff; float: right; position: relative;}
.ser-con .btn::after { border: none;}
.ser-con .btn::before{ content: ""; width: 1px; height: 40%; background-color: #ccc; 
position: absolute; left: 0; top: 50%; transform: translateY(-50%); }
.ser-con .inp{ width:80%; height: 80rpx; padding: 0 20rpx; box-sizing: border-box; font-size: 28rpx; 
background-color: #fff; float: left;}
.ser-list{ width: 100%; height: auto; border:1px solid #f0f0f0; background-color: #fafafa; }
.ser-list .li{ padding: 0 20rpx; height: 60rpx; line-height: 60rpx; font-size: 24rpx; color: #666;}
.ser-classify{ width: 100%; height: 70rpx; line-height: 70rpx; background-color: #fff; display: flex;}
.ser-classify .lab{ flex: 1; text-align: center; display: inline-block; color: #333; font-size: 24rpx;}

.line-planning{ width: 100%; height: 80rpx; padding: 0 30rpx; box-sizing: border-box; margin-top: 30rpx;
  transform: scale(0); opacity: 0; }
.line-planning .sel-way{ width: 65%; float: left; }
.line-planning .sel-way .picker{ line-height: 80rpx; background-color: #fff; padding: 0 20rpx; font-size: 28rpx; }
.line-planning .sel-way .picker .mm{ color: #f00;}
.line-planning .btn{ width: 30%; height: 80rpx; line-height: 80rpx; font-size: 28rpx; float: right;}  

.address-container{width: 100%; height: auto; overflow: hidden; margin-top: 30rpx;}
.address-thead{ width: 100%; height:80rpx; line-height: 80rpx; padding: 0 20rpx; box-sizing: border-box; color:#fff; 
font-size: 28rpx; border-bottom: 1px solid #f0f0f0; background-color: rgb(93, 147, 248); }
.address-list{ width: 100%; padding:0 30rpx; background-color: #fff;  box-sizing: border-box; }
.address-list .mod{ min-height: 100rpx; padding: 20rpx; border-bottom: 1px solid #f0f0f0; position: relative; }
.address-list .mod .th{  font-size: 28rpx; color: #333; margin-bottom: 20rpx; margin-right: 100rpx;}
.address-list .mod .des{ min-height:80rpx;  font-size: 24rpx; color: #666;}
.address-list .mod .dist{ position: absolute; right: 20rpx; bottom:20rpx; font-size: 22rpx; color: #999;}
.address-list .mod .dura{ position: absolute; right: 20rpx; top:24rpx; font-size: 22rpx; color: #999;}

.pio-address-info{ width: 100%; height: 200rpx; background-color: #fff; border-top: 1px solid #f0f0f0; box-sizing: border-box;
 position: fixed; left: 0;  z-index: 2; bottom: -250rpx;}
.pio-address-info .in{ padding: 30rpx;}
.pio-address-info .tio{ font-size: 30rpx; font-weight: 700; color: #000; margin-bottom: 10rpx;}
.pio-address-info .tcon{ width: 100%; font-size: 24rpx; color: #333; overflow: hidden; }
.pio-address-info .tcon .des{ width: 100%; height: 40rpx; line-height: 40rpx;  overflow: hidden; 
text-overflow:ellipsis; white-space: nowrap;}
.pio-address-info .tcon .bot{ width: 100%;  height: 40rpx; line-height: 40rpx; color: #999; }
.pio-address-info .tcon .bot .dist{ float: left; }
.pio-address-info .tcon .bot .dura{ float: left; }
.pio-address-info .tcon .bot .i{ width: 1px; height: 50%; background-color: #ccc; float: left; margin: 10rpx 20rpx;}

.pio-address-info .to-hear{ width: 100rpx; height: 100rpx; background-color: rgb(51, 125, 236); border-radius: 50%;
  position: absolute; right: 40rpx; top: -50rpx;   text-align: center; }
.pio-address-info .to-hear .i{ width: 36rpx; height: 36rpx; background-size: contain; background-repeat: no-repeat;
 display: inline-block; margin-top: 12rpx;}
.pio-address-info .to-hear .ti{ color: #fff; font-size:22rpx; display: block; line-height: 1;}

.the-routes{ width: 100%; height: auto; overflow: hidden; margin-top: 30rpx; background-color: #fff;}
.the-routes .th{ width: 100%; height:80rpx; line-height: 80rpx; padding: 0 20rpx; box-sizing: border-box; color:#fff; 
font-size: 28rpx; border-bottom: 1px solid #f0f0f0; background-color: rgb(134, 31, 252);}
.the-routes .lus{ font-size: 26rpx; color: #666; padding: 20rpx;}

.separate{ width: 100%; height: 250rpx;}


.pkv{ width: 100%; height: 200rpx; }
picker-view-column{ height:100%; background-color: rgb(100, 100, 100);}
.cti{ color:#fff; text-align: center; font-size: 26rpx;  line-height: 2.4; }