<!--pages/parklogs/parklogs.wxml-->
<view wx:if="{{isInput!=false||isInput!=''}}">
  <view class="weui-cells__title">停车时间</view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell ">
      <view class="weui-cell__hd">
        <view class="weui-label">车牌号</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" placeholder="请输入车牌号" value="{{record.recCarId}}" bindinput="bindrecCarIdInput" />
      </view>
    </view>
    <view class="weui-cell ">
      <view class="weui-cell__hd">
        <view class="weui-label">进入时间</view>
      </view>
      <view class="weui-cell__bd">
        <picker mode="date" value="{{date}}" disabled="disabled">
          <view class="weui-input">{{datetime}}</view>
        </picker>
      </view>
    </view>
    <view class="weui-cell ">
      <view class="weui-cell__hd">
        <view class="weui-label">现在时间</view>
      </view>
      <view class="weui-cell__bd">
        <picker mode="time" value="{{nowdatetime}}" disabled="disabled">
          <view class="weui-input">{{nowdatetime}}</view>
        </picker>
      </view>
    </view>
   <view class="weui-cell ">
      <view class="weui-cell__hd">
        <view class="weui-label">当前费率(元/小时)</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input"  value="2" />
      </view>
    </view>
      <view class="weui-cell ">
      <view class="weui-cell__hd">
        <view class="weui-label">总费用(元)</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input"  value="{{recCost}}" />
      </view>
    </view>
  </view>
</view>
<view wx:else>
  <view class="weui-search-bar">
    <view class="weui-search-bar__form">
      <view class="weui-search-bar__box">
        <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
        <input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" />
        <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
          <icon type="clear" size="14"></icon>
        </view>
      </view>
      <label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">
        <icon class="weui-icon-search" type="search" size="14"></icon>
        <view class="weui-search-bar__text">搜索</view>
      </label>
    </view>
    <view class="weui-search-bar__cancel-btn" hidden="{{!inputShowed}}" bindtap="hideInput">取消</view>
  </view>
  <view class="weui-cells__title">停车缴费记录</view>
  <view class="weui-cells weui-cells_after-title" wx:for="{{parkingRecord}}" wx:key="*this">
    <navigator url="../parklogs/parkrecord/parkrecord?recId={{item.recId}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">{{item.recCarId}}</view>
      <view class="weui-cell__ft weui-cell__ft_in-access">
        {{item.recEntryDate}}</view>
    </navigator>
  </view>
</view>
